// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "vim_mode": true,
    "ui_font_size": 20,
    "buffer_font_size": 25,
    "buffer_font_family": "Berkeley Mono Variable",
    "buffer_line_height": {
        "custom": 1.8
    },
    "centered_layout": {
        "left_padding": 0.1,
        "right_padding": 0.1
    },
    "cursor_blink": false,
    "format_on_save": "on",
    "preferred_line_length": 100,
    "project_panel": {
        "indent_size": 16
    },
    "relative_line_numbers": true,
    "scrollbar": {
        "show": "never"
    },
    "use_autoclose": false,
    "terminal": {
        "font_family": "Berkeley Mono Variable",
        "line_height": {
            "custom": 1.8
        }
    },
    "tabs": {
        "file_icons": true,
        "git_status": true
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": true
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": true
    },
    "tab_size": 4,
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Github Dark Dimmed"
    },
    "wrap_guides": [70, 100],
    "languages": {
        "Scala": {
            "tab_size": 2,
            "format_on_save": "off"
        }
    }
}
