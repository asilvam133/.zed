// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "session": {
    "trust_all_worktrees": true,
  },
  "ensure_final_newline_on_save": false,
  "remove_trailing_whitespace_on_save": false,
  "centered_layout": {
    "right_padding": 0.0,
    "left_padding": 0.2,
  },
  "buffer_font_weight": 400.0,
  "relative_line_numbers": "enabled",
  "ui_font_family": ".ZedSans",
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_fallbacks": ["Symbols Nerd Font"],
  "ui_font_fallbacks": ["Symbols Nerd Font"],
  "terminal": {
    "font_family": "Berkeley Mono",
    "font_fallbacks": ["Symbols Nerd Font"],
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "format_on_save": "off",
  "use_autoclose": false,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never",
  },
  "base_keymap": "JetBrains",
  "icon_theme": "Catppuccin Mocha",
  "ui_font_size": 18.0,
  "buffer_font_size": 21.0,
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte - No Italics",
    "dark": "Call trans opt: received. 2-19-98 13:24:18 REC:Log>",
  },
  "wrap_guides": [80, 100, 120, 150],
  "languages": {
    "Python": {
      "formatter": {
        "language_server": { "name": "ruff" },
      },
    },
  },
}
