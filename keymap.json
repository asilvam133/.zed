// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space space": "file_finder::Toggle",
    },
  },
  {
    "context": "Editor && VimControl && vim_mode == normal",
    "bindings": {
      "space c f": "editor::Format",
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-alt-l": null,
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-i": null,
    },
  },
  {
    "context": "(Workspace)",
    "bindings": {
      "ctrl-k ctrl-e": [
        "tab_switcher::Toggle",
        {
          "select_last": true
        }
      ]
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-e": null
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-e": null
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-a ctrl-f": [
        "projects::OpenRecent",
        {
          "create_new_window": false
        }
      ]
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "space u t": "theme_selector::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space u c": "workspace::ToggleCenteredLayout"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "space g g": "git_panel::ToggleFocus"
    }
  },
  {
    "context": "vim_mode == normal  && !menu",
    "bindings": {
      "space /": "pane::DeploySearch"
    }
  },
  {
    "context": "((Editor && VimControl) && vim_mode == visual)",
    "bindings": {
      "space c f": "editor::FormatSelections"
    }
  }
]
